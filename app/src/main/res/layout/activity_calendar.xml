<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/latest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Upcoming EVents -  Image Will be here"
        android:textColor="@android:color/background_dark" />
    <ListView
        android:layout_marginTop="20px"
        android:layout_below="@+id/latest_title"
        android:id="@+id/calendar_recent_calview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <!-- Add TextView to display the date -->
    <TextView
        android:layout_below="@+id/calendar_recent_calview"
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:text="Set the Date"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <!-- Add CalendarView to display the Calendar -->
    <CalendarView
        android:layout_below="@+id/date_view"
        android:id="@+id/calendar"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="19dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </CalendarView>

</RelativeLayout>
