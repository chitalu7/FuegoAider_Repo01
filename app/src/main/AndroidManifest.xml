<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.murrays.aiderv1" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aiderv1" >

        <activity
            android:name=".CalendarActivity"
            android:theme="@style/Theme.Aiderv1.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".CalendarEditActivity"
            android:theme="@style/Theme.Aiderv1.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".CalendarAddActivity"
            android:theme="@style/Theme.Aiderv1.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/Theme.Aiderv1.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".LogInActivity"
            android:theme="@style/Theme.Aiderv1.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".Calendar"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Aiderv1.NoActionBar"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Aiderv1.NoActionBar"/>
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Aiderv1.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <service
        android:name="com.murrays.aiderv1.Location.LocationService"
        android:enabled="true"
        android:exported="false" />
    </application>

</manifest>